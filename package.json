{
    "name": "swappi",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev:website": "turbo run dev --scope=website",
        "build:website": "turbo run build --scope=website",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "preinstall": "npx only-allow pnpm"
    },
    "devDependencies": {
        "eslint-config-custom": "workspace:*",
        "only-allow": "latest",
        "prettier": "latest",
        "turbo": "^1.7.4",
        "typescript": "latest"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=14.0.0"
    },
    "packageManager": "pnpm@7.8.0"
}
